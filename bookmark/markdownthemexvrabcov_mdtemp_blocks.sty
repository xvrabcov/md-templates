\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{markdownthemexvrabcov_mdtemp_blocks}

\usepackage{markdownthemexvrabcov_mdtemp_setcolours}%

\color{\textColor}\global\let\default@color\current@color%
\pagecolor{\backgroundColor}%

\markdownSetup
{
  jekyllData = true,
  theme = xvrabcov/mdtemp/setcolours,
  rendererPrototypes={
    image = {%
      \includegraphics[width=\textwidth, keepaspectratio]{#2}%
    },
    blockQuoteBegin = {%
      \null%
      \vfill%
      \itshape%
      \begin{quotation}%
        \centering\noindent%
    },
    blockQuoteEnd = {%
      \end{quotation}%
      \vfill%
    },
    link = {%
      \begin{center}%
        \qrcode{#2}\par%
        #1
      \end{center}%
      \vspace{1.25cm}%
    },  
  },
}
\renewcommand*\markdownRendererJekyllDataStringPrototype[2]{%
  \expandafter\gdef\csname mdtemp@#1\endcsname{#2}%
}
